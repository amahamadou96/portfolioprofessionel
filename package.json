{
  "name": "portfolio-cybersecurity",
  "version": "1.0.0",
  "description": "Portfolio professionnel moderne - Cybersécurité",
  "author": "Abdoulahi Mahamadou Soumaila",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "php -S localhost:8000",
    "dev": "npm run watch",
    "build": "npm run minify-css && npm run minify-js",
    "watch": "nodemon --exec 'npm run build' --ext 'css,js'",
    "minify-css": "cleancss -o styles.min.css styles.css",
    "minify-js": "terser script.js -o script.min.js",
    "lint": "eslint script.js",
    "test": "jest",
    "docker-build": "docker build -t portfolio .",
    "docker-run": "docker-compose up -d",
    "docker-stop": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "sweetalert2": "^11.8.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "terser": "^5.24.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
